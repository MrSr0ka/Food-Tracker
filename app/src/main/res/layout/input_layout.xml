            android:layout_height="wrap_content"
            android:text="Add product to tracker"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="5dp"/>
    </LinearLayout>

