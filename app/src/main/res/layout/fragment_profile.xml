<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentProfile">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4sp"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_margin="10dp">

      <TextView
          android:layout_width="190dp"
          android:layout_height="wrap_content"
          android:text="Welcome"
          android:textSize="40dp"
          android:layout_marginTop="25dp"
          android:layout_marginRight="25dp"
          android:layout_gravity="end"

          android:textColor="#000"/>

         <ImageView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_gravity="start"
             android:layout_marginLeft="50dp"
             android:src="@drawable/atomlogo" />

     </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="What makes some processed foods less healthy? (NHS, 2022)"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Ingredients such as salt, sugar and fat are sometimes added to processed foods to make their flavour more appealing and to extend their shelf life, or in some cases to contribute to the food's structure, such as salt in bread or sugar in cakes."
                android:textColor="#000"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Checking calories in food (NHS, 2022)"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="The calorie content of many shop-bought foods is stated on the packaging as part of the nutrition label."
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="The label will usually tell you how many calories are contained in 100 grams or 100 millilitres of the food or drink, so you can compare the calorie content of different products."
                android:layout_marginTop="140dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate your total daily caloric needs using Physical Activity Level Calculator"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"/>

            <Button
                android:id="@+id/editProfileBtn"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="PAL Calculator" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    </ScrollView>
</FrameLayout>